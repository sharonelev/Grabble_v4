<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.example.android.grabble_v4.SettingsActivity">

    <TextView
        android:layout_width="395dp"
        android:layout_height="0dp"
        android:text="Settings"
        android:id="@+id/setting_title"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@id/checkBoxCorrectDialog"
        app:layout_constraintLeft_toLeftOf="@id/checkBoxCorrectDialog"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:paddingBottom="5dp"/>
    <CheckBox
        android:id="@+id/checkBoxCorrectDialog"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@+id/setting_title"
        app:layout_constraintLeft_toLeftOf="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop correct word dialog"
        />
    <CheckBox
        android:id="@+id/checkBoxWrongDialog"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxCorrectDialog"
        app:layout_constraintLeft_toLeftOf="@+id/checkBoxCorrectDialog"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop wrong word dialog"
        />
</android.support.constraint.ConstraintLayout>
