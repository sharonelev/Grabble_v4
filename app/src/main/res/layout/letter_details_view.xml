<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/details_letter_name"
        android:textAlignment="center"
        android:textSize="@dimen/menu_text_size"
        android:layout_marginRight="@dimen/details_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details_letter_value"
        android:layout_marginRight="@dimen/details_margin"
        android:textSize="@dimen/menu_text_size"
        android:textAlignment="center"
        android:layout_toRightOf="@id/details_letter_name"

    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/menu_text_size"
        android:id="@+id/details_letter_freq"
        android:textAlignment="center"
        android:layout_toRightOf="@id/details_letter_value"
        />

</RelativeLayout>