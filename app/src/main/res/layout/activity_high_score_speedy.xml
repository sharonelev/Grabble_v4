<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingRight="20dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/border_score"

    tools:context="com.example.android.grabble_v4.HighScoreSpeedyActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/speedy_high_score"
        android:textColor="#000000" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/Date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:textColor="#000000"
                android:paddingLeft="5dp"
                android:paddingRight="110dp"
                />

            <TextView
                android:id="@+id/score_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|fill_horizontal|end"
                android:paddingRight="5dp"
                android:text="SCORE"
                android:layout_toRightOf="@id/Date_title"
                android:textColor="#000000" />
        </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:id="@+id/score_speedy_list_view"
        android:paddingBottom="10dp">
    </android.support.v7.widget.RecyclerView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:text="BACK"
        android:layout_gravity="left"
        android:onClick="onClick"
        android:id="@+id/back_to_game_in_high_score"
        android:textColor="@color/colorAccent"
        android:background="#ffffff"/>
    <Button
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:layout_marginBottom="10dp"
    android:text="NEW GAME"
    android:onClick="onClick"
    android:layout_gravity="right"
    android:id="@+id/new_game_in_high_score"
    android:textColor="@color/colorAccent"
    android:background="#ffffff"/>

</LinearLayout>
    <com.matthewtamlin.sliding_intro_screen_library.indicators.DotIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:numberOfDots="2"
        app:selectedDotIndex="2"
        app:selectedDotColor="#a39292"
        app:unselectedDotColor="#aeadad"
        android:paddingBottom="3dp"
        android:layout_gravity="center"/>
</LinearLayout>