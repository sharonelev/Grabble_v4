<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.grabble_v4.MainActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/scrabble_letter_list"
            android:layout_width="368dp"
            android:padding="3dp"
            android:layout_height="120dp" />
        <Button
            android:layout_width="368dp"
            android:layout_height="48dp"
            android:text="Get another letter (costs 1 point)"
            android:id="@+id/get_letter"
            app:layout_constraintTop_toBottomOf="@id/scrabble_letter_list"
            android:onClick="onClick" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="368dp"
            android:layout_height="75dp"
         android:id="@+id/word_builder_list"
            android:padding="3dp"
            android:background="#de8762"
            app:layout_constraintTop_toBottomOf="@id/get_letter"
            />
        <Button
        android:layout_width="184dp"
        android:layout_height="48dp"
        android:text="Play word"
        android:id="@+id/send_word"
        app:layout_constraintTop_toBottomOf="@id/word_builder_list"
            android:gravity="right"
        android:onClick="onClick"/>
        <Button
            android:layout_width="184dp"
            android:layout_height="48dp"
            android:text="Clear Builder"
            android:id="@+id/clear_word"

            app:layout_constraintLeft_toRightOf="@id/send_word"
            app:layout_constraintTop_toBottomOf="@id/word_builder_list"

            android:onClick="onClick"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/myWordsRecyclerView"
            android:layout_width="368dp"
            android:layout_height="275dp"

            app:layout_constraintTop_toBottomOf="@id/send_word" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toBottomOf="@id/myWordsRecyclerView"
            android:text="Your Score:"
            android:id="@+id/your_score_title"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:id="@+id/score"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/your_score_title"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@id/myWordsRecyclerView"/>




    </android.support.constraint.ConstraintLayout>
    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_height="42dp"
        android:layout_width="42dp"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>

