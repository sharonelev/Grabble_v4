<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/border_score"
    android:id="@+id/high_score_moderate_activity_layout"
    android:orientation="vertical"
    android:paddingRight="20dp"

    tools:context="com.example.android.grabble_v4.HighScoreModerateActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/moderate_high_score"
        android:textColor="#000000" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/Date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="110dp"
            android:text="DATE"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/score_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Date_title"
            android:gravity="right|fill_horizontal|end"
            android:paddingRight="5dp"
            android:text="SCORE"
            android:textColor="#000000" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/score_moderate_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_to_game_in_high_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:onClick="onClick"
            android:text="BACK"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/new_game_in_high_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:onClick="onClick"
            android:text="NEW GAME"
            android:textColor="@color/colorAccent" />


    </LinearLayout>

    <com.matthewtamlin.sliding_intro_screen_library.indicators.DotIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="3dp"
        app:numberOfDots="2"
        app:selectedDotColor="#a39292"
        app:selectedDotIndex="1"
        app:unselectedDotColor="#aeadad" />

</LinearLayout>